FROM ubuntu:18.04

RUN apt update
RUN apt-get install cron
RUN apt install -y python3-pip 
RUN python3 -m pip install --upgrade pip
RUN python3 -m pip install django django-tinymce4-lite
RUN pip3 install psycopg2-binary requests tablib virtualenv gunicorn
RUN mkdir src
RUN cd src
RUN virtualenv djangomachine

RUN mkdir /var/www


ENV DB_NAME 'acb'
ENV ENGINE 'django.db.backends.postgresql'
ENV DB_USER 'postgres'
ENV DB_PASSWORD 'coderslab'
ENV HOST_ON_SERVER '172.105.75.249'
ENV PORT_ON_SERVER '5432'
ENV DEBUG False

ENV SUPERUSER superuser
ENV SU_PASSWORD adminpass
ENV SU_EMAIL user@user.com

ENV SSL_CHECK False

COPY flight_analyser /src/








